{
  // python
  "python.analysis.typeCheckingMode": "basic", // off, basic, strict
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.formatting.provider": "black",
  "python.defaultInterpreterPath": "d:\\OneDrive\\coding\\venv_project\\Scripts\\python.exe",
  // editor
  "markdown.preview.lineHeight": 1.5,
  "editor.lineHeight": 1.6,
  "editor.fontLigatures": true,
  "editor.fontFamily": "JetBrains Mono NL, 'Courier New', monospace",
  "editor.fontWeight": "200",
  "editor.formatOnSaveMode": "file",
  "editor.wordWrap": "off",
  "editor.renderFinalNewline": false,
  "editor.renderWhitespace": "all",
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "none",
  "editor.formatOnSave": true,
  "editor.fontSize": 15,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  // terminal
  "terminal.integrated.fontWeight": 100,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.profiles.windows": {
    "Git-Bash": {
      "path": "D:\\App\\Git\\bin\\bash.exe"
    },
    "PowerShell -NoProfile": {
      "source": "PowerShell",
      "args": ["-NoProfile"]
    }
  },
  "files.exclude": {
    "**/.git": false
  },
  // workBench
  "workbench.productIconTheme": "fluent-icons",
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Sublime Material Theme - Dark",
  // "workbench.activityBar.visible": false,
  // "workbench.colorCustomizations": {
  //   "titleBar.activeBackground": "#ffae007d"
  // },
  // vim Setup
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.smartRelativeLine": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["k", "j"],
      "after": ["<Esc>"]
    }
  ],
  // icon
  "vsicons.dontShowNewVersionMessage": true,
  // javascript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // prettier
  "prettier.printWidth": 300,
  "bracketPairColorizer.depreciation-notice": false,
  // json
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "breadcrumbs.enabled": false,
  "debug.console.wordWrap": false,
  "html.format.wrapLineLength": 0,
  "html.format.endWithNewline": true,
  "security.workspace.trust.untrustedFiles": "open",
  "liveServer.settings.donotShowInfoMsg": true,
  "window.menuBarVisibility": "compact"
}
